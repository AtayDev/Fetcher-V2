# Folders
CHROMA_DIR=./storage/chroma
UPLOAD_DIR=./storage/uploads
FLASK_SECRET=dev-secret

# Ollama config
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.2:1b

# === Which provider to use: openai | gemini | deepseek ===
LLM_PROVIDER=gemini

# === Gemini (Google) ===
GOOGLE_API_KEY="INSERT KEY HERE"
GEMINI_CHAT_MODEL="gemini-2.5-flash"
GEMINI_EMBED_MODEL="text-embedding-004"   # (or "models/text-embedding-004")

TOKEN_SECRET="INSERT TOKEN SECRET HERE"
TOKEN_EXPIRY_HOURS=24

# --- OpenAI ---
OPENAI_API_KEY=sk-...
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small


# --- DeepSeek (OpenAI-compatible) ---
DEEPSEEK_API_KEY=sk-ds-...
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_EMBED_MODEL=deepseek-embedding

# === RAG budgets ===
CONTEXT_MAX_TOKENS=10000
ANSWER_MAX_TOKENS=1200

# Chunking (token-aware)
CHUNK_TOKENS=600
CHUNK_OVERLAP=120

# Retrieval (MMR for diversity)
TOP_K=15
FETCH_K=20
MMR_LAMBDA=0.4